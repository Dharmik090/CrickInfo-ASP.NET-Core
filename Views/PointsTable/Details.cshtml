@model crickinfo_mvc_ef_core.ViewModels.PointsTableTournamentViewModel

@{
    ViewData["Title"] = "CricInfo - Points Table";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Points Table - @Model.Tournament.Name</h2>

    <!-- Points Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Team</th>
                    <th scope="col">Wins</th>
                    <th scope="col">Losses</th>
                    <th scope="col">Points</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in Model.pointsTables)
                {
                    <tr>
                        <th scope="row">@entry.Id</th>
                        <td>@entry.Team.Name</td>
                        <td>@entry.Wins</td>
                        <td>@entry.Lose</td>
                        <td>@entry.Points</td>
                    </tr>                
                }
            </tbody>
        </table>
    </div>
</div>
