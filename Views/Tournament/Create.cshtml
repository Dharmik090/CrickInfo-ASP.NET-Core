@model crickinfo_mvc_ef_core.Models.Tournament

@{
    ViewData["Title"] = "CricInfo - Tournament";
}

<div class="mb-5 mt-5 container-fluid d-flex justify-content-center align-items-center">
    <div class="card p-5 shadow-lg" style="max-width: 500px; width: 100%;">

        <form asp-action="Create">
            <h1 class="text-center mb-4" style="font-size: 2rem;">Add Tournament</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="form-label d-block mt-2" style="font-size: 1.25rem;"></label>
                <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter Name" />
                <span asp-validation-for="Name" class="text-danger small" style="font-size: 1rem;"></span>
            </div>


            <div class="form-group">
                <label asp-for="Description" class="form-label d-block mt-3" style="font-size: 1.25rem;"></label>
                <textarea asp-for="Description" class="form-control form-control-lg" placeholder="Enter Description"></textarea>
                <span asp-validation-for="Description" class="text-danger small" style="font-size: 1rem;"></span>
            </div>


            <div class="form-group">
                <label asp-for="DateOfTournament" class="form-label d-block mt-3" style="font-size: 1.25rem;">Date of Tournament</label>
                <input asp-for="DateOfTournament" class="form-control form-control-lg" type="date" placeholder="Select Tournament Date" />
                <span asp-validation-for="DateOfTournament" class="text-danger small" style="font-size: 1rem;"></span>
            </div>


            <div class="form-group">
                <label asp-for="Status" class="form-label d-block mt-3" style="font-size: 1.25rem;">Status</label>
                <select asp-for="Status" class="form-control">
                    <option value="upcoming">Upcoming</option>
                    <option value="ongoing">Ongoing</option>
                    <option value="completed">Completed</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>


            <div class="d-flex justify-content-center mt-3">
                <button type="submit" class="btn btn-primary" style="width: 50%;">Add</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}