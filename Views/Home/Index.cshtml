@model IEnumerable<Tournament>

@{
    ViewData["Title"] = "CricInfo - Home";
}

<div class="container mt-5">
    <div class="text-center">
        <h1>Welcome to CricInfo</h1>
        <p class="lead">Manage and organize your cricket tournaments with ease.</p>
    </div>

    <div class="row justify-content-center text-center mt-4">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Create a Tournament</h5>
                    <p class="card-text">Easily create a new tournament by adding teams, defining formats, and scheduling matches.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Add Matches</h5>
                    <p class="card-text">Schedule and manage matches for your tournament, including match details and scores.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Points Table</h5>
                    <p class="card-text">View and manage the points table of the tournament to track team standings.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Prediction</h5>
                    <p class="card-text">Make prediction for your favourite team.</p>
                </div>
            </div>
        </div>
    </div>
</div>

